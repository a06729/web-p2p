        <div class="main_div bg-neutral-100 h-screen">
            <main class="main_content">
                <div class="avatar_div">
                    <h3 class="my_avatar_title text-slate-500">나의 정보</h3>
                    <div class="my_avatar_div">
                        <div class="my_avatar_div__profile">
                            <img id="my_avatar_img" class="my_avatar_img" src="" alt="" srcset="">
                            <div class="my_avatar_div__profile__title"></div>
                        </div>
                    </div>
                    <div class="sharBtn_div flex justify-center items-center">
                        <div>
                            <a id="btnKakao" href="javascript:shareKakao()">
                                <img alt="카카오톡 공유 버튼" src="/public/img/kakaolink_btn.png"/>
                            </a>
                        </div>
                        <div>
                            <a id="telegram_btn" href="javascript:shareTelegram()">
